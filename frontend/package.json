{
  "name": "xiaoyaosearch-desktop",
  "version": "1.0.0",
  "description": "小遥搜索 - 多模态AI智能桌面搜索应用",
  "main": "dist/main/main.js",
  "author": "XiaoyaoSearch Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "vue": "^3.3.8",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    "ant-design-vue": "^4.0.7",
    "axios": "^1.6.2",
    "@vueuse/core": "^10.6.1",
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "@vitejs/plugin-vue": "^4.5.0",
    "vite": "^5.0.0",
    "typescript": "^5.3.2",
    "@vue/tsconfig": "^0.4.0",
    "@types/node": "^20.9.4",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.xiaoyaosearch.desktop",
    "productName": "小遥搜索",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}