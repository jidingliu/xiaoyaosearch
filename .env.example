# Database Configuration
DATABASE_URL=sqlite:///./data/xiaoyaosearch.db

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Xiaoyao Search
VERSION=0.1.0
DESCRIPTION=AI-driven desktop search application

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://127.0.0.1:5173"]

# AI Services Configuration

# OpenAI Configuration (optional)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_MAX_TOKENS=2048
OLLAMA_TEMPERATURE=0.7

# Embedding Model Configuration
EMBEDDING_MODEL=BAAI/bge-small-zh-v1.5
EMBEDDING_DIMENSION=512
EMBEDDING_DEVICE=cpu  # or cuda if available

# Whisper Configuration
WHISPER_MODEL=base
WHISHER_DEVICE=cpu  # or cuda if available

# CLIP Configuration
CLIP_MODEL=OFA-Sys/chinese-clip-vit-base-patch16
CLIP_DEVICE=cpu  # or cuda if available

# Index Configuration
INDEX_DATA_PATH=./indexes
VECTOR_INDEX_TYPE=IndexIVFFlat
FULLTEXT_INDEX_PATH=./indexes/fulltext

# File Processing Configuration
MAX_FILE_SIZE=100MB
SUPPORTED_TEXT_EXTENSIONS=.txt,.md,.py,.js,.ts,.json,.xml,.csv,.log
SUPPORTED_DOCUMENT_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx
SUPPORTED_IMAGE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.bmp,.tiff,.webp
SUPPORTED_AUDIO_EXTENSIONS=.mp3,.wav,.flac,.m4a,.aac,.ogg
SUPPORTED_VIDEO_EXTENSIONS=.mp4,.avi,.mov,.wmv,.flv,.webm

# Performance Configuration
MAX_CONCURRENT_INDEX_TASKS=4
SEARCH_RESULT_LIMIT=50
VECTOR_SEARCH_TOP_K=100
FULLTEXT_SEARCH_TOP_K=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_ROTATION=daily
LOG_RETENTION=30

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Configuration
DEBUG=false
RELOAD=false